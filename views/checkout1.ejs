    <div class="container" id="table">
        <table class="table">
            <thead>
              <tr>
                <th scope="col">S.N</th>
              
                <th scope="col">Item Name</th>
                <th scope="col">Cost</th>
                <th scope="col"></th>
              </tr>
            </thead>
            <tbody>
              <%if (userData.length!=0){
                var total=0;
                var i=1;
                userData.forEach(function(rows){
                  %>
              <tr>
                <th scope="row"><%=i; %></th>
                
                <td><%=rows.Item %></td>
                <td><%=rows.Cost %></td>
                <td><form action="/delete_from_cart/<%=rows.Item%>?_method=DELETE"  method="POST" id="delete_form"><button class="btn btn-sm btn-danger >Delete</button><a id="dlt_icon" return false;" href="javascript:{}"><svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-trash-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                  <path fill-rule="evenodd" d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5a.5.5 0 0 0-1 0v7a.5.5 0 0 0 1 0v-7z"/>
                </svg></a></form></td>
              </tr>
              <% i++;
              total=total+rows.cost }) %>
            <% } else { %>
              <tr>
                <th scope="row">2</th>
                <td>No data found</td>
              </tr>
              <% } %>
            </tbody>
          </table>
    </div>
    <div class="container" id="form">
        <form class="container" id="regForm" action="/add_to_payment/" method="POST">
          <h1>Enter Payment Details:</h1>
          <div class="tab">
            <div class="form-row">
              <div class="form-group col-md-6">
                <label for="name">Name</label>
                <input type="text" class="form-control" id="name" placeholder="Enter Name" name="name">
              </div>
              <div class="form-group col-md-6">
                <label for="contact">Contact</label>
                <input type="text" class="form-control" id="contact" placeholder="Contact" name="contact">
              </div>
            </div>
    
            <div class="form-row">
              <div class="form-group col-md-6">
                <label for="paymentType">Type</label>
                <select id="paymentType" class="form-control" name="paymentType">
                  <option value="Card">Card</option>
                  <option value="Cash">Cash</option>
                </select>
              </div>
              <div class="form-group col-md-6">
                <label for="address">Address</label>
                <input type="text" class="form-control" id="address" placeholder="Enter address" name="address">
              </div>
            </div>
            <div class="form-row">
              <div class="form-group col-md-6">
                  <label for="city">City</label>
                  <input type="text" class="form-control" id="city" placeholder="Enter City" name="city">
                </div>
                <div class="form-group col-md-6">
                  <label for="zip">Zip</label>
                  <input type="text" class="form-control" id="zip" placeholder="Enter Zipcode" name="zip">
                </div>
              </div>
              
            </div>
            <div id="for_card">
              <div class="form-row">
                <div class="form-group col-md-6">
                  <label for="card_number">Card Number</label>
                  <input type="text" class="form-control" id="card_number" placeholder="Enter Card Number" name="card_number">
                </div>
                <div class="form-group col-md-6">
                  <label for="cvv">Cvv</label>
                  <input type="text" class="form-control" id="cvv" placeholder="Enter Cvv" name="cvv">
                </div>
              </div>
            </div>
            <%if (userData.length!=0){
                var total=0;
                var i=1;
                userData.forEach(function(rows){
                    i++;
                    total=total+rows.cost})}
                    else{%>
                        <tr>
                            <th scope="row">2</th>
                            <td>No data found</td>
                        </tr>
                   <% } %>
                   <button type="submit">Proceed to payment</button>
                   <br>
          <br>
          </div>
          
          
        </form>
      </div>











      <script>
        $('#paymentType').on('change', function () {
          if ($(this).val() === "Card") {
            $("#for_card").show()
          }
          else {
            $("#for_card").hide()
          }
        });
      </script>
</div>
</div>























