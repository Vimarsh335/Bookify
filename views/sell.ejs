  <div class="content" id="form">
    <form id="regForm" action="/add_item_to_inventory" method="POST">
      <h1>Enter Item Details:</h1>
      <div class="tab">
        <div class="form-row">
          <div class="form-group col-md-6">
            <label for="item_name">Name</label>
            <input type="text" class="form-control" id="item_name" placeholder="Enter Item Name" name="item_name">
          </div>
          <div class="form-group col-md-2">
            <label for="item_type">Type</label>
            <select id="item_type" class="form-control" name="item_type">
              <option value="Book">Book</option>
              <option value="Magazine">Magazine</option>
              <option value="Stamp">Stamp</option>
            </select>
          </div>
          <div class="form-group col-md-2">
            <label for="item_id">Item Id</label>
            <input type="text" class="form-control" id="item_id" placeholder="Enter Item Id" name="item_id">
          </div>
          <div class="form-group col-md-2">
            <label for="quantity">Qty</label>
            <input type="text" class="form-control" id="quantity" placeholder="Enter quantity" name="quantity">
          </div>
        </div>

        <div class="form-row">
          <div class="form-group col-md-6">
            <label for="item_condition">Type</label>
            <select id="item_condition" class="form-control" name="item_condition">
              <option value="factory_new">Factory New</option>
              <option value="minimal_wear">Minimal Wear</option>
              <option value="well_worn">Well Worn</option>
            </select>
          </div>
          <div class="form-group col-md-6">
            <label for="price">Price</label>
            <input type="text" class="form-control" id="price" placeholder="Enter Price (Integer Only)" name="price">
          </div>
        </div>
        <div id="for_book">
          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="isbn">ISBN</label>
              <input type="text" class="form-control" id="isbn" placeholder="Enter ISBN" name="isbn">
            </div>
            <div class="form-group col-md-6">
              <label for="genre">Genre</label>
              <select id="genre" class="form-control" name="genre">
                <option value="Fiction">Fiction</option>
                <option value="Non_Fiction">Non Fiction</option>
                <option value="Literary">Literary</option>
                <option value="Adventure">Adventure</option>
                <option value="Self_Help">Self Help</option>
                <option value="Mystery">Mystery</option>
                <option value="Romantic">Romantic</option>
                <option value="Horror">Horror</option>
                <option value="Science">Science</option>
                <option value="Crime_Thriller">Crime Thriller</option>
                <option value="Young_adults">Young Adults</option>
                <option value="Fantasy">Fantasy</option>
              </select>
            </div>
          </div>


          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="author">Author</label>
              <input type="text" class="form-control" id="author" placeholder="Enter Author Name" name="author">
            </div>
            <div class="form-group col-md-6">
              <label for="publisher">Publisher</label>
              <input type="text" class="form-control" id="publisher" placeholder="Enter Publisher Name" name="publisher">
            </div>
          </div>
        </div>
        <div id="for_magazine">
          <div class="form-row">
            <div class="form-group col-md-4">
              <label for="genre_magazine">Genre</label>
              <select id="genre_magazine" class="form-control" name="genre_magazine">
                <option value="Fiction">Fiction</option>
                <option value="Non_Fiction">Non Fiction</option>
                <option value="Literary">Literary</option>
                <option value="Adventure">Adventure</option>
                <option value="Self_Help">Self Help</option>
                <option value="Mystery">Mystery</option>
                <option value="Romantic">Romantic</option>
                <option value="Horror">Horror</option>
                <option value="Science">Science</option>
                <option value="Crime_Thriller">Crime Thriller</option>
                <option value="Young_adults">Young Adults</option>
                <option value="Fantasy">Fantasy</option>
              </select>
            </div>
            <div class="form-group col-md-4">
              <label for="edition">Edition</label>
              <input type="text" class="form-control" id="edition" placeholder="Enter Edition" name="edition">
            </div>
            <div class="form-group col-md-4">
              <label for="release_date">Release Date</label>
              <input type="date" class="form-control" id="release_date" placeholder="Enter Date" name="release_date">
            </div>
          </div>
        </div>

        <div id="for_stamp">
          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="country">Country</label>
              <input type="text" class="form-control" id="country" placeholder="Enter Country" name="country">
            </div>
            <div class="form-group col-md-6">
              <label for="mfd_year">Mfd Year</label>
              <input type="text" class="form-control" id="mfd_year" placeholder="Enter Mfd Year" name="mfd_year">
            </div>
          </div>
        </div>
        <button type="submit" class="btn btn-success" id="submit_btn">Sell</button>
      </div>
    </form>
  </div>

  <script>
    $('#item_type').on('change', function () {
      if ($(this).val() === "Book") {
        $("#for_book").show()
        $("#for_magazine").hide()
        $("#for_stamp").hide()
      }
      else if ($(this).val() === "Magazine") {
        $("#for_magazine").show()
        $("#for_book").hide()
        $("#for_stamp").hide()
      }
      else {
        $("#for_magazine").hide()
        $("#for_book").hide()
        $("#for_stamp").show()
      }
    });
  </script>


